# Intercom Configuration
INTERCOM_API_KEY=your-intercom-api-key-here
MELVIN_ADMIN_ID=8918000

# Evaluation/Dry-Run Mode
# Set to "true" to run agent on real conversations without posting to Intercom
# No messages, notes, custom attributes, or snooze actions will be executed
DRY_RUN=false

# Validation Endpoint
VALIDATION_ENDPOINT=https://your-domain.com/internal/melvin-response-validation/validate
VALIDATION_API_KEY=your-validation-api-key-here

# MCP Server Configuration
MCP_BASE_URL=https://aws.api.mercor.com
MCP_AUTH_TOKEN=your-auth-token-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
MODEL_NAME=gpt-4o-mini

# LangSmith Configuration
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=application-status-agent

# MongoDB Configuration (Optional - for procedure selection logging)
MONGODB_URI=mongodb://localhost:27017
